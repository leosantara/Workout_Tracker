<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.ac.ukdw.workout_tracker.fragmentLainnya">

    <LinearLayout
        android:id="@+id/linearLayouttt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="815dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Lainnya"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFotoUser"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:paddingTop="20dp"
                android:src="@drawable/app_profil"
                app:civ_border_color="@color/black"
                app:civ_border_width="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Nama Pengguna"
                        android:textAlignment="center"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtProgres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Progress Workout"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnSetting"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-130dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="Setting"
                    android:scaleType="fitCenter"
                    android:src="@drawable/app_setting"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/img_progres_abs" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Latihan Perut"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtJumlahABS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="1x"
                        android:textAlignment="center"
                        android:textSize="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/img_progres_arm" />

                    <TextView
                        android:id="@+id/txtGerakan6"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Latihan lengan"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtJumlahARM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="1x"
                        android:textAlignment="center"
                        android:textSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/img_progres_chest" />

                    <TextView
                        android:id="@+id/txtGerakan2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Latihan Dada"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtJumlahChest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="1x"
                        android:textAlignment="center"
                        android:textSize="30dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtKalori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Kalori yang terbakar adalah 200 Kalori!!!"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>