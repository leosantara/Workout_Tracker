<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentTambahMakanan">


    <LinearLayout
        android:id="@+id/linearLayouttt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="815dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="-30dp"
                    android:layout_weight="0"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="Kembali"
                    android:src="@drawable/app_back_arrow" />

                <TextView
                    android:id="@+id/txtJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:layout_marginLeft="-20dp"
                    android:text="Resep Makanan"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="657dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgFotoUser"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/app_siluet_makanan"
                    app:civ_border_color="@color/black"
                    android:layout_gravity="center"

                    app:civ_border_width="1dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnKamera"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#294199"
                        android:text="Kamera" />

                    <Button
                        android:layout_marginLeft="10dp"
                        android:id="@+id/btnGaleri"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#294199"
                        android:text="Galeri" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtJudulMakanan"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"

                    android:hint="Nama Makanan"
                    android:textAlignment="center"
                    android:inputType="text"

                    android:minHeight="32dp"
                    android:paddingLeft="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp">

                </EditText>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginLeft="20dp"
                    android:text="Bahan-bahan"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtBahanMakanan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top|left"
                    android:inputType="text|textMultiLine"
                    android:background="@drawable/kotak"
                    android:minHeight="32dp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    tools:ignore="SpeakableTextPresentCheck"></EditText>

                <TextView
                    android:id="@+id/bahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginLeft="20dp"
                    android:text="Cara Pembuatan"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtCaraPembuatan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/kotak"
                    android:gravity="top|left"
                    android:inputType="text|textMultiLine"
                    android:minHeight="32dp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    tools:ignore="SpeakableTextPresentCheck"></EditText>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#294199"
                    android:text="Tambah Resep"
                    android:id="@+id/btnTambahResep"
                    android:textColor="@color/white"
                    android:textSize="20sp">
                </Button>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>